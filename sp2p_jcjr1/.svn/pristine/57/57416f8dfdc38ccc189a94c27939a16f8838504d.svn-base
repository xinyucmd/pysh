		function getMyTop(){
			var _param={};
			user.httpPost(
					'/getMyInvestTop.do',
					_param,
					function(data){
						if(user.isNotBank(data)){
							var map = data.data;
							var ranking = $("#ul_ranking");
							ranking.empty();
							var htmlStr ="";
							htmlStr+= "<li>第"+map.ranking+"名</li>"
							htmlStr+= "<li>"+map.friendAmountTotal+"</li>"
							htmlStr+= "<li>"+map.myAmountTotal+"</li>"
							htmlStr+= "<li>"+map.amountTotal+"</li>"
							
							ranking.append(htmlStr);

		});
		
		function toLogin(login_target){
			loginTarget = login_target;
			user.login_pc_check(function(data){
				if(user.isNotBank(data)){
					if(data.status == 1){
						$("#div_box_b").hide();
						processAfterLogin();
						return true;
					}else{
						showLogin();
						$("#div_box_b").show();
						$("#div_box_c").hide();
						
						// 头部控制
						$("#span_no_login").show();
						$("#span_logind").hide();
					}
				}else{

<script type="text/javascript">
 	$(function(){
		var 
			$page=$(".index-main"),
			len=$page.length,
			i=0;
		$("body").mousewheel(function(e,delta){
			var scrollTop=$(window).scrollTop();
			if(delta<0){
				for(var j=0;j<len-1;j++){
					var top1=$page.eq(j).offset().top,
						 top2=$page.eq(j+1).offset().top;
					if(scrollTop>=top1 && scrollTop<top2){
							$(window).scrollTop(top2-85);
						}
				}
			}else{
				for(var j=0;j<len-1;j++){
					var top1=$page.eq(j).offset().top,
						 top2=$page.eq(j+1).offset().top;
					if(scrollTop>top1 && scrollTop<=top2){
							$(window).scrollTop(top1+100);
						}
				}	
			}
		});	
		
	});
</script>

<script>
	var param = {};
	var loginTarget = '';
	var baseUrl = "http://www.jcbanking.com/page/recommend/reg.html";
	var user;
	jQuery(document).ready(function($) {
		user = new MUser(param);
		user.login_pc_check(function(data){
			if(user.isNotBank(data)){
				if(data.status == 1){
					$("#span_no_login").hide();
					$("#span_logind").show();
					
					// 设置复制链接的地址
					$("#reconmmend_link").attr("value",baseUrl+"?userName="+data.userName);
				}else{
					// 头部控制
					$("#span_no_login").show();
					$("#span_logind").hide();
				}
			}else{
				alert('检查登录状态失败！');	
			}
		});
		
	});
	
	// 登录
	function login(){
		var username = $("#username").attr("value");
		var password = $("#ipt_pwd_value").attr("value");
		var code = $("#code").attr("value");
		var obj_btn_login = $("#btn_login");
		var obj_img_code = $("#img_code");
		user.login_pc(username, password, code, obj_btn_login, obj_img_code,function(data){
			toLogin('');
		},
		function(data1){
			clearForm();
		}
		);
	}
	
	function flushCode(){
		var obj_img_code = $("#img_code");
		user.flushImgCode(obj_img_code);
	}
	
	// 登录框
	jQuery(document).ready(function($) {
		$('.close').click(function(){
			closeLogin();
		});
	});
	
	function toLogin(lt){
		$("#div_box_b").hide();
		loginTarget = lt;
		user.login_pc_check(function(data){
			if(user.isNotBank(data)){
				if(data.status == 1){
					$("#div_box_b").hide();
					
					// 显示二维码
					if(loginTarget=='code'){
						showCode(data);
					}
					
					// 设置复制链接的地址
					$("#reconmmend_link").attr("value",baseUrl+"?userName="+data.userName);
					
					processAfterLogin();
					return true;
				}else{
					//showLogin();
					//$("#div_box_b").show();
					//$("#div_box_c").hide();
					
					// 头部控制
					//$("#span_no_login").show();
					//$("#span_logind").hide();
					
					window.location.href = "/login.do";
				}
			}else{
				alert('检查登录状态失败！');	
			}
		});
	}
	
	function showCode(data){
		// 加载二维码
		user.genQCode("imgCode", baseUrl+"?userName="+data.userName);
		$("#showCode").show();
	}
	
	function closeCode(){
		$("#showCode").hide();
	}
	
	function processAfterLogin(){
		$("#div_box_b").hide();
		$("#div_box_c").show();
		
		// 头部控制
		$("#span_no_login").hide();
		$("#span_logind").show();
		closeLogin();
	}
	
	function clearForm(){
		$("#code").attr("value","");
		$("#btn_login").attr("value","");
		$("#img_code").attr("value","");
	}
	
	function showLogin(){
		$('.theme-popover-mask').fadeIn(100);
		$('.login_box').slideDown(200);
		// 刷新图片验证码
	    flushCode();
	}
	
	function closeLogin(){
		$('.theme-popover-mask').fadeOut(100);
		$('.login_box').slideUp(200);
	}
	
	
	// 定义一个新的复制对象
	var clip = new ZeroClipboard($("#img_cp_link"), {
	  moviePath: "/js/ZeroClipboard.swf"
	} );
	
	// 复制内容到剪贴板成功后的操作
	clip.on( 'complete', function(client, args) {
		user.login_pc_check(function(data){
			if(user.isNotBank(data)){
				if(data.status == 1){
					$("#div_box_b").hide();
					//alert("复制成功，复制内容为："+ args.text);
					alert("复制成功,复制内容可直接粘贴!");
					return true;
				}else{
					//showLogin();
					//$("#div_box_b").show();
					//$("#div_box_c").hide();
					
					// 头部控制
					//$("#span_no_login").show();
					//$("#span_logind").hide();
					
					window.location.href = "/login.do";
				}
			}else{
				alert('检查登录状态失败！');	
			}
		});
	} );
	
</script>


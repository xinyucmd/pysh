<!DOCTYPE html>
<html><head>
<meta charset="UTF-8">
<title>微信贷-登录</title>
    <meta name="format-detection" content="telephone=no"/>
    <meta name="format-detection" content="address=no"/>
    <meta content="target-densitydpi=device-dpi,width=640,maximum-scale=1, user-scalable=0"  name="viewport" id="viewport">
	<link type="text/css" rel="stylesheet" href="/css/m/style.css">
	
	<script src="/js/jquery-1.8.3.min.js"></script>
	<script src="/script/m/jquery.rye-core-1.0.js"></script>
	<script src="/script/m/rye.jc-core-1.0.js"></script>
	<script src="/script/m/rye.user-1.0.js"></script>
	
	<script type="text/javascript">
		var user = new MUser();
		var afterLoginUrl = null;
		function login(){
			afterLoginUrl = user.getCookie("afterLoginUrl");
			
			var mobileNo = $("#ipt_mobileNo").val();
	    	var pwd = $("#ipt_pwd_value").val();
	    	
	    	if(mobileNo==null || mobileNo=='请输入用户名'){
	    		alert('请输入用户名');
	    		return;
	    	}
	    	
	    	if(pwd==null || pwd=='请输入密码'){
	    		alert('请输入密码');
	    		return;
	    	}
	    	if(user.login(mobileNo,pwd,complete_login));
		}
		
		function complete_login(data){
			if(data.error != -1){
				alert(data.msg);
			}else{
				if(user.isNotBank(afterLoginUrl)){
					window.location.href=afterLoginUrl;
				}else{
					window.location.href='admin_lo.html';
				}
			}
		}
		
		
		function pwdFocus(){
			var pwd = $("#ipt_pwd");
			var pwd_value = $("#ipt_pwd_value");
			if (pwd.val() =='请输入密码'){
				pwd_value.show();
				pwd.hide();
				
				pwd_value.focus();
			}
		}

		function pwdBlur(){
			var pwd = $("#ipt_pwd");
			var pwd_value = $("#ipt_pwd_value");
			if (pwd_value.val() ==''){
				pwd_value.hide();
				pwd.show();
			}
		}
		
	</script>
</head>
<body>

<div id="wrap">
    	<div class="logo"><img src="/images/m/logo.jpg" class="img7"></div>
        <form method="post">
        <div class="user">
        	<ul>
            	<li><label class="txt bp10">用户名</label><input id="ipt_mobileNo" name="" type="text" class="input w3" value="请输入用户名" onmouseover="this.style.borderColor='#FF6600'" onmouseout="this.style.borderColor=''" onFocus="if (value =='请输入用户名'){value =''}" onBlur="if (value ==''){value='请输入用户名'}"></li>
                <li><label class="txt bp11">密&nbsp;&nbsp;&nbsp;码</label>
                	<input class="input w3" type="text" id="ipt_pwd" value="请输入密码" 
                    onmouseover="this.style.borderColor='#FF6600'" 
                    onmouseout="this.style.borderColor=''" 
                    onFocus="pwdFocus();" 
                    onBlur="" />
                    
                    <input class="input w3" type="password" display="none" id="ipt_pwd_value" value="" 
                    onmouseover="this.style.borderColor='#FF6600'" 
                    onmouseout="this.style.borderColor=''"
                    onBlur="pwdBlur();" />
                
                </li>
            </ul>
        </div>
        </form>
        <div class="login_btn">
        	<p class="login_txt"><a href="reg.html">没有账号？免费注册</a></p>
            <p><input name="" type="button" class="login_input" onclick="login();" value="登陆"></p>
        </div>
</div>
<script type="text/javascript"> 
var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://"); 
